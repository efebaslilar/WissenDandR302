@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutDandR.cshtml";
}

@if (ViewBag.RegisterFailedMessage != null)
{
    <div class="alert alert-danger">@ViewBag.RegisterFailedMessage</div>
}


<div class="row" style="align-content:center">
    <div class="col-md-6 col-md-offset-3 col-md-offset-3">
        <h1 style="font-weight:bold">Üye Ol</h1>
        <h5 style="color:darkgray">Yıldızlı alanların doldurulması zorunludur.</h5>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">*</span>
                <label class="control-label">Adınız:</label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">*</span>
                <label class="control-label" asp-for="Surname"> </label>
                <input type="text" asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname"></span>
            </div>

            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">*</span>
                <label class="control-label">Emailiniz:</label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">*</span>
                <label class="control-label">Şifreniz:</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">*</span>
                <label class="control-label">Doğum Tarihiniz:</label>
                <input type="date" asp-for="BirthDate" class="form-control" />
                <span asp-validation-for="BirthDate"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="KAYIT OL" class="btn btn-default btn-block"
                       style="background-color:#5a88ca;color:white" />
            </div>

        </form>

    </div>
</div>
