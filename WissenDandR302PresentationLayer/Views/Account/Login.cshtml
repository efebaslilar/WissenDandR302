@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutDandR.cshtml";
}

<div class="row" style="align-content:center">
    <div class="col-md-6 col-md-offset-3 col-md-offset-3">
        <h1 style="font-weight:bold">Giriş Yap</h1>
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">*</span>
                <label class="control-label">Emailiniz:</label>
                <input type="email" asp-for="Email" class="form-control"  />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <span class="text-danger" style="font-weight:bold;margin-right:3px">*</span>
                <label class="control-label">Şifreniz:</label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default"
                style="background-color:#5a88ca;color:white;float:right">
                    Giriş Yap
                </button>

              <a class="btn btn-default" href="/Account/Register"
              style="background-color:white;color:#5a88ca;float:left">Kayıt Ol</a>
            </div>

        </form>

    </div>
</div>

